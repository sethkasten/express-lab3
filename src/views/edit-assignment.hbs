<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Schoolbell&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
    <title>Edit Assignment</title>
  </head>
  <body>
    <h1>Edit Assignment</h1>
    <form
      action="/assignments/{{id}}/edit-confirmation"
      method="POST"
      class="assignment-form"
    >
      <label for="name">Name</label>
      <input type="text" name="name" id="name" value="{{name}}" />
      <label for="score">Score</label>
      <input type="text" name="score" id="score" value="{{score}}" />
      <label for="total">Total</label>
      <input type="text" name="total" id="total" value="{{total}}" />
      <div>
        <input type="checkbox" name="completed" id="completed" value="true" />
        <label for="completed">Completed</label>
      </div>
      <button>Edit</button>
      <a href="/">Nevermind</a>
    </form>
  </body>
</html>